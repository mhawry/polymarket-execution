# Your wallet private key (required)
POLYMARKET_PRIVATE_KEY=your_wallet_private_key_here

# Your Polymarket proxy address (required)
POLYMARKET_PROXY_ADDRESS=your_polymarket_proxy_address_here

# Signature type (optional, defaults to 1)
# 1 = Email/Magic Link authentication
# 2 = Browser Wallet authentication
POLYMARKET_SIGNATURE_TYPE=2

# API settings (uses defaults if not specified)
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137

# Safety limits (recommended)
POLYMARKET_MAX_ORDER_SIZE=1000.0

# Connection and retry settings
POLYMARKET_CONNECTION_TIMEOUT=30
POLYMARKET_REQUEST_TIMEOUT=10
POLYMARKET_MAX_RETRIES=3
